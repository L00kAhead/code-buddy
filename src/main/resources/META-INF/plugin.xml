<idea-plugin>
    <id>com.github.l00kahead.codebuddy</id>
    <name>Code Buddy</name>

    <vendor url="https://github.com/l00kahead">Himanshu Soni</vendor>

    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity
                implementation="com.github.l00kahead.codebuddy.lifecycle.CodeBuddyStartupActivity"/>
        <toolWindow
                id="CodeBuddy"
                factoryClass="com.github.l00kahead.codebuddy.toolWindow.CodeBuddyToolWindowFactory"
                icon="/icons/codeBuddyTool.svg"
                anchor="right"
        />
    </extensions>
</idea-plugin>
